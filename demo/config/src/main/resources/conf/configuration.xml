<?xml version="1.0" encoding="UTF-8"?>

<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  <external-component-plugins>
    <!-- The full qualified name of the PortalContainerConfig -->
    <target-component>org.exoplatform.container.definition.PortalContainerConfig</target-component>
    <component-plugin>
      <!-- The name of the plugin -->
      <name>Add PortalContainer Definitions</name>
      <!-- The name of the method to call on the PortalContainerConfig in order to register the PortalContainerDefinitions -->
      <set-method>registerPlugin</set-method>
      <!-- The full qualified name of the PortalContainerDefinitionPlugin -->
      <type>org.exoplatform.container.definition.PortalContainerDefinitionPlugin</type>
      <init-params>
        <object-param>
          <name>ksdemo</name>
          <object type="org.exoplatform.container.definition.PortalContainerDefinition">
            <!-- The name of the portal container -->
            <field name="name">
              <string>ksdemo</string>
            </field>
            <!-- The name of the context name of the rest web application -->
            <field name="restContextName">
              <string>rest-ksdemo</string>
            </field>
            <!-- The name of the realm -->
            <field name="realmName">
              <string>gatein-domain-ksdemo</string>
            </field>
            <!-- All the dependencies of the portal container ordered by loading priority -->
            <field name="externalSettingsPath">
              <string>ksdemo.properties</string>
            </field>
            <field name="dependencies">
              <collection type="java.util.ArrayList">
                <value>
                  <string>eXoResources</string>
                </value>
                <value>
                  <string>portal</string>
                </value>
                <value>
                  <string>dashboard</string>
                </value>
                <value>
                  <string>exoadmin</string>
                </value>
                <value>
                  <string>eXoGadgets</string>
                </value>
                <value>
                  <string>eXoGadgetServer</string>
                </value>
                <value>
                  <string>rest-ksdemo</string>
                </value>
                <value>
                  <string>web</string>
                </value>
                <!--
                  No wsrp in beta02 <value> <string>wsrp-producer</string> </value>
                -->
                <value>
                  <string>ksResources</string>
                </value>
                <value>
                  <string>faq</string>
                </value>
                <value>
                  <string>forum</string>
                </value>
                <value>
                  <string>poll</string>
                </value>
                <value>
                  <string>wiki</string>
                </value>
                <value>
                  <string>ks</string>
                </value>
                <value>
                  <string>ksdemo</string>
                </value>
                <value>
                  <string>commons-extension</string>
                </value>
                <value>
                  <string>cometd-ksdemo</string>
                </value>
                <value>
                  <string>fck</string>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>

  <component-plugin>
    <!-- The name of the plugin -->
    <name>Disable a PortalContainer</name>
    <!-- The name of the method to call on the PortalContainerConfig in order to register the changes on the PortalContainerDefinitions -->
    <set-method>registerDisablePlugin</set-method>
    <!-- The full qualified name of the PortalContainerDefinitionDisablePlugin -->
    <type>org.exoplatform.container.definition.PortalContainerDefinitionDisablePlugin</type>
    <init-params>
      <!-- The list of the name of the portal containers to disable -->
      <values-param>
        <name>names</name>
        <value>portal</value>
      </values-param>
    </init-params>
  </component-plugin>
    
  </external-component-plugins>
</configuration>
