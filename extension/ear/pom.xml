<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.exoplatform.ks</groupId>
    <artifactId>ks</artifactId>
    <version>2.0.0-M1-SNAPSHOT</version>
  </parent>
	
  <modelVersion>4.0.0</modelVersion>
  <artifactId>exo.ks.extension.ear</artifactId>
  <packaging>ear</packaging>
  <name>KS Extension EAR</name>
  <url>http://www.exoplatform.org</url>
  <description>KS Extension EAR for GateIn</description>
  <properties>
      <!-- maven-enforcer-plugin -->
    <jdk.min.version>1.5</jdk.min.version>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.extension.config</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
    </dependency>      
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.common</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
    </dependency>
     <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.faq.service</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.faq.webapp</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
      <type>war</type>
    </dependency>    
     <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.forum.service</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.forum.webapp</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.web.ksResources</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
      <type>war</type>
    </dependency>              
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.web.webservice</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
    </dependency> 
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.extension.webapp</artifactId>
      <version>2.0.0-M1-SNAPSHOT</version>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>org.exoplatform.portal</groupId>
      <artifactId>exo.portal.component.web</artifactId>
      <version>3.0.0-Beta02-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>       
  </dependencies>  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
           <displayName>ks-ext</displayName>        
           <modules>
             <jarModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.extension.config</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>           
             <webModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.extension.webapp</artifactId>
               <contextRoot>ks</contextRoot>
             </webModule>
             <jarModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.eXoApplication.common</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <jarModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.eXoApplication.faq.service</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <webModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.eXoApplication.faq.webapp</artifactId>
               <contextRoot>faq</contextRoot>
             </webModule>             
              <jarModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.eXoApplication.forum.service</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>   
             <webModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.eXoApplication.forum.webapp</artifactId>
               <contextRoot>forum</contextRoot>
             </webModule>     
             <webModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.web.ksResources</artifactId>
               <contextRoot>ksResources</contextRoot>
             </webModule>                            
              <jarModule>
               <groupId>org.exoplatform.ks</groupId>
               <artifactId>exo.ks.web.webservice</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>                                  
          </modules>
        </configuration>
      </plugin>
    </plugins>  
    <finalName>ks</finalName>    
  </build>
</project>
