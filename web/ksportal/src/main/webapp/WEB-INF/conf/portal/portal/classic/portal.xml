<?xml version="1.0" encoding="ISO-8859-1"?>
<portal-config>
  <portal-name>classic</portal-name>
  <locale>en</locale>
  <factory-id>office</factory-id>
  <access-permissions>Everyone</access-permissions>
  <edit-permission>*:/platform/administrators</edit-permission>
  <creator>root</creator>
  <widget-layout>
    <container>
      <application>
        <instance-id>admin:/eXoWidgetWeb/InfoWidget/InfoWidget</instance-id>
        <application-type>eXoWidget</application-type>
        <title>Info Widget</title>
      </application>
      <application>
        <instance-id>admin:/eXoWidgetWeb/WelcomeWidget/WelcomeWidget</instance-id>
        <application-type>eXoWidget</application-type>
        <title>Welcome Widget</title>
      </application>
    </container>
  </widget-layout>
  <portal-layout>
    <application>
      <instance-id>portal#classic:/web/BannerPortlet/banner</instance-id>
      <show-info-bar>false</show-info-bar>
    </application>
    <container template="system:/templates/groovy/webui/component/UITableColumnContainer.gtmpl">
      <container template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
        <page-body>
        </page-body>
      </container>
      <container width="250px" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
        <application>
          <instance-id>portal#classic:/web/HomePagePortlet/sidebar</instance-id>
          <title>Sidebar</title>
          <show-info-bar>false</show-info-bar>
          <show-application-state>false</show-application-state>
          <show-application-mode>false</show-application-mode>
          
        </application>
      </container>
    </container>   
    <application>
      <instance-id>portal#classic:/web/BreadcumbsPortlet/breadcumbs</instance-id>
      <show-info-bar>false</show-info-bar>
    </application>
    <!--application>
      <instance-id>portal#classic:/web/NavigationPortlet/menu</instance-id>
      <show-info-bar>false</show-info-bar>
    </application-->     
    <application>
      <instance-id>portal#classic:/web/FooterPortlet/footer</instance-id>
      <show-info-bar>false</show-info-bar>
    </application>
  </portal-layout>
</portal-config>