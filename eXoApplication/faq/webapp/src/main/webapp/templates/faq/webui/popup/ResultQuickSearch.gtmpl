<% 
	import org.exoplatform.faq.service.Category;
	import org.exoplatform.faq.service.Question;
	import org.exoplatform.faq.webui.FAQUtils;
	import java.text.Format;
	import java.text.SimpleDateFormat;
	import java.util.Date;
%>
<div class="ResultQuickSearch $uicomponent.id" style="padding: 8px;">
		<% uiform.begin() %>
		<div class="UIForm">
					<div class="TitleMoveThreads"><%= _ctx.appRes("ResultQuickSearch.title.result"); %></div>
 					<div class="UIHorizontalLayout">
 							<div class="UIPermissionManager">
 								<div class="UIPermissionInfo">
 									<table class="UIGrid" cellspacing="0" borderspacing="0">
 										<thead>
 											<tr>
 												<th><%= _ctx.appRes("ResultQuickSearch.title.icon"); %></th>
 												<th><%= _ctx.appRes("ResultQuickSearch.title.name"); %></th>
 												<th><%= _ctx.appRes("ResultQuickSearch.title.createdate"); %></th>
 												<th><%= _ctx.appRes("ResultQuickSearch.title.action"); %></th>
 											</tr>
 										</thead>
 										<tbody>
 										<% 
 										List formSearchs = uicomponent.getFormSearchs() ; 
 										if(formSearchs != null && formSearchs.size() > 0){
 											for(formSearch in formSearchs) {
												String Id = formSearch.getId();
												String name = formSearch.getName() ;
												Format formatter = new SimpleDateFormat("MM/dd/yyyy ");
						 						String date = formatter.format(formSearch.getCreatedDate());
						 						String icon = formSearch.getIcon() ;
						 						String link = uicomponent.event("Link",Id);
						 						String linkQuestion = uicomponent.event("LinkQuestion",Id);
 										 %>
 											<tr class="EvenRow">
 												<td class="text" style="width: 30px;" align="center"><div class="$icon"><span></span></div></td>
 												<%
												if(name.length()>90) {
													String title = name ;
													title = FAQUtils.getTitle(title) ; 
													name = FAQUtils.getSubString(name, 90);
 												%>
 												<td class="text" align="left"><a href="$link" title="$title">$name</a></td>
 												<%
												} else {
 												%>
 												<td class="text" align="left"><a href="$link">$name</a></td>
 												<%}%>
 												<td class="text" style="width: 90px;" align="center">$date</td>
 												<td style="width: 30px;" align="center">
 												<% if(Id.indexOf("ategory")> 0) {
 												 %>
 													<a href="$link"><div class="CheckIcon" style="margin: 0px auto;"></div></a>
 													<% } else { %>
 													<a href="$linkQuestion"><div class="CheckIcon" style="margin: 0px auto;"></div></a>
 													<% } %>
 												</td>
 											</tr>
 											<% 
 												}
 											} else {
 										 %>
 										 <tr class="EvenRow">
												<td class="Tdbox" colspan="10" align="center"><div><%= _ctx.appRes("ResultSearch.title.no-matches"); %></div></td>
			  							</tr>
										<% } %> 
 									</tbody>
 								</table>
 								<% 
 								long totalPages = uicomponent.getTotalpages("LIST_RESULT_SEARCH") ;
					       if(totalPages > 1) {
					       %>
 								<div style="overflow:auto;">
									<% uicomponent.renderChild(uicomponent.LIST_RESULT_SEARCH) ; %>
									<div style="clear: both;"><span></span></div>
								</div>
								<% } %>
 						</div>
 					</div>
 				</div>
 		</div>
 		
 		
		<div class="UIAction">
    	<table class="ActionContainer" align="center">
			  <tr>
				  <td align="center">
		    		<a href="<%=uicomponent.event("Close");%>" class="ActionButton LightBlueStyle">
			  	  	<div class="ButtonLeft">
			    	  	<div class="ButtonRight">
			      	  	<div class="ButtonMiddle"><%=_ctx.appRes(uicomponent.getName() + ".action.Close");%></div>
			        	</div>
			      	</div>
		    		</a>
	      	</td>
				</tr>
 	  </table>
	</div>
		<%uiform.end()%>
</div>