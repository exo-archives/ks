                                      %>
                                        <a class="ApprovedQuestion" href="$actionAnswer" title="<%=_ctx.appRes("UIQuestionsInfo.title.UnApprove")%>">
                                        	<span></span>
                                        </a>
                                      <%} else {
                                      %>
                                        <a class="UnApprovedQuestion" href="$actionAnswer" title="<%=_ctx.appRes("UIQuestionsInfo.title.Approve")%>">
                                          <span></span>
                                        </a>
                                      <%}%>
                                    </td>
                                    <td class="DisablePrint">
                                      <%
                                        actionAnswer = uicomponent.event("ChangeStatusAnswer", answer.getId() + "/Activate");
                                        if(answer.getActivateAnswers()) {
                                      %>
                                        <a class="ActivateQuestion" href="$actionAnswer" title="<%=_ctx.appRes("UIQuestionsInfo.title.UnActivated")%>">
                                          <span></span>
                                        </a>
                                      <%} else {
                                      %>
                                        <a class="DeActivateQuestion" href="$actionAnswer" title="<%=_ctx.appRes("UIQuestionsInfo.title.Activate")%>">
                                          <span></span>
                                        </a>
                                      <%}%>
                                    </td>
                                    <%} %>
                                    <td class="DisablePrint">
                                        <a class="DeleteAnswer" href="<%=uicomponent.event("DeleteAnswer", "" + answer.getId())%>" title="<%=_ctx.appRes("UIQuestionsInfo.title.DeleteAnswer")%>">
                                          <span></span>
                                        </a>
                                    </td>
                                  <%}%>
                                  </tr>
                                </tbody>
                              </table>
                            </div>
                            
                          <%}
                            if(uicomponent.getChildById(uicomponent.ANSWER_ITER + question.getId())!= null){
