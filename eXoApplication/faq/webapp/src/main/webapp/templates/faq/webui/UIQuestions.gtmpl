                                      </div>
                                    </div>
                                    
                                    <div class="LabelBox ClearFix">

                                        <div class="AttachmentLabel">
                                          <%
                                            String downloadAtt = uicomponent.event("DownloadAttach");
                                          if(fileName.length() > 60){
