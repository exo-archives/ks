                                <% uicomponent.renderChild(uicomponent.ANSWER_ITER + question.getId()) %>
                               
                              </div>  
                        <%  }
                          } else { %>
                        <div class="NotResponse">
                          <%=_ctx.appRes("UIQuestions.label.QuestionNotYetAnswered")%>
                        </div>
                        <%}%>
