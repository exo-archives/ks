                                            </div>
                                            <%}%>
                                            <div class="AuthorInfor">
                                              <a title="<%=_ctx.appRes("UIQuestionsInfo.title.ViewUserProfile")%>" href="<%=uicomponent.event("ViewUserProfile", owner)%>" >
                                                <span class="UserName">$responseBy</span>
                                              </a>
                                            </div>
                                          </div>
                                      </div>
                                      
                                      <div class="ResponseItemContainerRight">
                                        
                                          <%
                                          if(answer.getApprovedAnswers() && answer.getActivateAnswers()){
