   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
   
  <component>
    <key>org.exoplatform.wiki.mow.core.api.MOWService</key>
    <type>org.exoplatform.wiki.mow.core.api.MOWService</type>
  </component>

  <component>
    <key>org.exoplatform.wiki.service.WikiService</key>
    <type>org.exoplatform.wiki.service.impl.WikiServiceImpl</type>
    <init-params>
      <values-param>
        <name>creole/1.0</name>
        <value>jar:/wikisyntax/help/Creole1.0_Short.txt</value>
        <value>jar:/wikisyntax/help/Creole1.0_Full.txt</value>
      </values-param>
      <values-param>
        <name>xwiki/2.0</name>
        <value>jar:/wikisyntax/help/xWiki2.0_Short.txt</value>
        <value>jar:/wikisyntax/help/xWiki2.0_Full.txt</value>
      </values-param>
       <values-param>
        <name>confluence/1.0</name>
        <value>jar:/wikisyntax/help/Confluence1.0_Short.txt</value>
        <value>jar:/wikisyntax/help/Confluence1.0_Full.txt</value>
      </values-param>
      <properties-param>
        <name>preferences</name>
        <property name="defaultSyntax" value="confluence/1.0"/>              
      </properties-param> 
    </init-params>
  </component>
  
  <component>
    <key>org.exoplatform.wiki.service.WikiRestService</key>
    <type>org.exoplatform.wiki.service.impl.WikiRestServiceImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.wiki.service.DataStorage</key>
    <type>org.exoplatform.wiki.service.impl.JCRDataStorage</type>
  </component>
  
  <component>
    <key>org.exoplatform.wiki.resolver.PageResolver</key>
    <type>org.exoplatform.wiki.resolver.PageResolver</type>
  </component>
  
  <component>
    <key>org.exoplatform.wiki.rendering.RenderingService</key>
    <type>org.exoplatform.wiki.rendering.impl.RenderingServiceImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.wiki.service.diff.DiffService</key>
    <type>org.exoplatform.wiki.service.diff.DiffService</type>
  </component>
  
  <component>
    <type>org.exoplatform.services.jcr.impl.ext.action.SessionActionCatalog</type>
  </component>
  
  <component>
    <key>org.exoplatform.wiki.service.webdav.WebDavService</key>
    <type>org.exoplatform.wiki.service.webdav.WebDavServiceImpl</type>
    <init-params>
      <value-param>
        <name>auto-mix-lockable</name>
        <value>false</value>
      </value-param>
      <value-param>
        <name>def-folder-node-type</name>
        <value>wiki:page</value>
      </value-param>
      <value-param>
        <name>def-file-node-type</name>
        <value>wiki:attachment</value>
      </value-param>
      <value-param>
        <name>def-file-mimetype</name>
        <value>text/plain</value>
      </value-param>
      <value-param>
        <name>update-policy</name>
        <value>create-version</value>
      </value-param>
    </init-params>
  </component>
  
