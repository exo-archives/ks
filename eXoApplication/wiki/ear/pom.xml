                </jarModule>
                <jarModule>
                    <groupId>dom4j</groupId>
                    <artifactId>dom4j</artifactId>
                   <excluded>true</excluded>
                </jarModule>
                <jarModule>
                    <groupId>com.google.gwt</groupId>
                    <artifactId>gwt-incubator</artifactId>
