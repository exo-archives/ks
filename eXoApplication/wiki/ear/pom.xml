<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
  <groupId>org.exoplatform.ks</groupId>
  <artifactId>exo.ks.eXoApplication.wiki</artifactId>
  <version>2.2.1-SNAPSHOT</version>
  </parent>
  <artifactId>exo.ks.eXoApplication.wiki.ear</artifactId>
  <packaging>ear</packaging>

  <name>eXo KS Wiki EAR</name>

  <properties>
  <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.wiki.service</artifactId>
      <version>${project.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ks</groupId>
      <artifactId>exo.ks.eXoApplication.wiki.webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>${gwt.version}</version>
    </dependency>
      <dependency>
      <groupId>net.sourceforge.htmlcleaner</groupId>
      <artifactId>htmlcleaner</artifactId>
      <version>${net.sourceforge.htmlcleaner.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-servlet</artifactId>
      <version>${gwt.version}</version>
    </dependency>
  </dependencies>  

  <build>
    <finalName>gatein-exo-ks-wiki-${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <displayName>ks-wiki-ear</displayName>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <modules>
          <webModule>
            <groupId>org.exoplatform.ks</groupId>
            <artifactId>exo.ks.eXoApplication.wiki.webapp</artifactId>
            <contextRoot>wiki</contextRoot>
            <bundleFileName>wiki.war</bundleFileName>
          </webModule>
          <jarModule>
            <groupId>org.exoplatform.ks</groupId>
            <artifactId>exo.ks.eXoApplication.wiki.service</artifactId>
            <includeInApplicationXml>true</includeInApplicationXml>
          </jarModule>
          <jarModule>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <includeInApplicationXml>true</includeInApplicationXml>
          </jarModule> 
          <jarModule>
            <groupId>net.sourceforge.htmlcleaner</groupId>
            <artifactId>htmlcleaner</artifactId>
            <includeInApplicationXml>true</includeInApplicationXml>
          </jarModule>
          <jarModule>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-servlet</artifactId>
            <includeInApplicationXml>true</includeInApplicationXml>
          </jarModule>
          <jarModule>
            <groupId>javax.validation</groupId>
            <artifactId>validation-api</artifactId>
            <excluded>true</excluded>
          </jarModule>
          <jarModule>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <excluded>true</excluded>
          </jarModule>
          <jarModule>
            <groupId>javax.jcr</groupId>
            <artifactId>jcr</artifactId>
            <excluded>true</excluded>
          </jarModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
