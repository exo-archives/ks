                    <artifactId>jaxb-impl</artifactId>
                   <excluded>true</excluded>
                </jarModule>
                <jarModule>
                    <groupId>javax.jcr</groupId>
                    <artifactId>jcr</artifactId>
                   <excluded>true</excluded>
                </jarModule>
                <!-- jarModule>
                    <groupId>org.jdom</groupId>
                    <artifactId>jdom</artifactId>
