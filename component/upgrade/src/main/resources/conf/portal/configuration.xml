<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
  xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.commons.upgrade.UpgradeProductService</target-component>
    <component-plugin>
      <name>UpgradeForumPlugin</name>
      <set-method>addUpgradePlugin</set-method>
      <type>org.exoplatform.ks.upgrade.UpgradeForumPlugin</type>
      <description>eXo Forum Upgrade Plugin</description>
      <init-params>
        <value-param>
          <name>product.group.id</name>
          <description>The groupId of the product</description>
          <value>org.exoplatform.ks</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>UpgradeWikiPlugin</name>
      <set-method>addUpgradePlugin</set-method>
      <type>org.exoplatform.ks.upgrade.UpgradeWikiPlugin</type>
      <description>eXo Wiki Upgrade Plugin</description>
      <init-params>
        <value-param>
          <name>product.group.id</name>
          <description>The groupId of the product</description>
          <value>org.exoplatform.ks</value>
        </value-param>
      </init-params>
    </component-plugin>
    
    <component-plugin>
      <name>WikiPermissionRepairPlugin</name>
      <set-method>addUpgradePlugin</set-method>
      <type>org.exoplatform.ks.upgrade.WikiPermissionRepairPlugin</type>
      <description>Repair the permission for the wiki attachment</description>
      <init-params>
        <value-param>
          <name>product.group.id</name>
          <description>The groupId of the product</description>
          <value>org.exoplatform.ks</value>
        </value-param>
      </init-params>
    </component-plugin>
    
    <component-plugin>
      <name>WikiGroupPermissionRepairPlugin</name>
      <set-method>addUpgradePlugin</set-method>
      <type>org.exoplatform.ks.upgrade.WikiGroupPermissionRepairPlugin</type>
      <description>Repair the group permission for the wiki page</description>
      <init-params>
        <value-param>
          <name>product.group.id</name>
          <description>The groupId of the product</description>
          <value>org.exoplatform.ks</value>
        </value-param>
      </init-params>
    </component-plugin>
    
    <component-plugin>
      <name>UpgradeAnswerPlugin</name>
      <set-method>addUpgradePlugin</set-method>
      <type>org.exoplatform.ks.upgrade.UpgradeAnswerPlugin</type>
      <description>eXo Answer Upgrade Plugin</description>
      <init-params>
        <value-param>
          <name>product.group.id</name>
          <description>The groupId of the product</description>
          <value>org.exoplatform.ks</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
