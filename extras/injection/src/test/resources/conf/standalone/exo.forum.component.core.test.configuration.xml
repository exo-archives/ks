<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

   <component>
     <type>org.exoplatform.services.scheduler.impl.QuartzSheduler</type>
   </component>
   
   <component>
      <type>org.exoplatform.services.scheduler.QueueTasks</type>
   </component>
   
  <component>
    <type>org.exoplatform.services.bench.DataInjectorService</type>
  </component>
  
  <!-- Forum Injector Definition-->
  <component>
    <type>org.exoplatform.ks.extras.injection.forum.ProfileInjector</type>
  </component>

  <component>
    <type>org.exoplatform.ks.extras.injection.forum.CategoryInjector</type>
  </component>
  
    <component>
    <type>org.exoplatform.ks.extras.injection.forum.ForumInjector</type>
  </component>

  <component>
    <type>org.exoplatform.ks.extras.injection.forum.TopicInjector</type>
  </component>
  
  <component>
    <type>org.exoplatform.ks.extras.injection.forum.PostInjector</type>
  </component>

  <component>
    <type>org.exoplatform.ks.extras.injection.forum.MembershipInjector</type>
  </component>
  
  <component>
    <type>org.exoplatform.ks.extras.injection.forum.AttachmentInjector</type>
  </component>
  
   <!-- FAQ Injector Definition-->
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.CategoryInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.AnswerInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.ProfileInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.QuestionInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.CommentInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.AttachmentInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.faq.MembershipInjector</type>
  </component>

  <!-- POLL Injector Definition-->
  <component>
    <type>org.exoplatform.ks.extras.injection.poll.GroupInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.poll.PollInjector</type>
  </component>
  <component>
    <type>org.exoplatform.ks.extras.injection.poll.VoteInjector</type>
  </component>
  
  
  <component>
    <type>org.exoplatform.services.jcr.ext.app.ThreadLocalSessionProviderService</type>
  </component>
  
  
  <component>
    <key>org.exoplatform.faq.service.FAQService</key>
    <type>org.exoplatform.faq.service.impl.FAQServiceImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.forum.service.ForumService</key>
    <type>org.exoplatform.forum.service.impl.ForumServiceImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.forum.service.DataStorage</key>
    <type>org.exoplatform.forum.service.impl.JCRDataStorage</type>
  </component>  

  <component>
    <key>org.exoplatform.poll.service.DataStorage</key>
    <type>org.exoplatform.poll.service.impl.JCRDataStorage</type>
  </component>  

  <component>
    <key>org.exoplatform.poll.service.PollService</key>
    <type>org.exoplatform.poll.service.impl.PollServiceImpl</type>
  </component> 

  <component>
    <key>org.exoplatform.ks.common.jcr.KSDataLocation</key>
    <type>org.exoplatform.ks.common.jcr.KSDataLocation</type>
    <description>Holds JCR storage location for KS data</description>
    <init-params>
      <value-param>
        <name>workspace</name>
        <description>workspace for KS data</description>
        <value>portal-test</value>
      </value-param>
    </init-params>
  </component>
  
   <component>
    <key>org.exoplatform.forum.service.ForumStatisticsService</key>
    <type>org.exoplatform.forum.service.impl.ForumStatisticsServiceImpl</type>
  </component> 
    
  <component>
    <key>org.exoplatform.services.scheduler.JobSchedulerService</key>
    <type>org.exoplatform.services.scheduler.impl.JobSchedulerServiceImpl</type>
  </component>
  
 
  <component>
    <key>org.exoplatform.services.jdbc.DataSourceProvider</key>
    <type>org.exoplatform.services.jdbc.impl.DataSourceProviderImpl</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.organization.OrganizationService</target-component>
    <!--Forum user listener-->
    <component-plugin>
      <name>forum.user.event.listener</name>
      <set-method>addListenerPlugin</set-method>
      <type>org.exoplatform.forum.service.conf.ForumUserListener</type>
      <description>creates a profile in forum for each new user and calculate info when deleted user.</description>
      <init-params>
        <properties-param>
          <name>user.profile.setting</name>
          <description>set default user profile</description>
          <property name="timeZone" value="GMT" />
          <property name="shortDateFormat" value="MM/dd/yyyy" />
          <property name="longDateFormat" value="DDD,MMM dd,yyyy" />
          <property name="timeFormat" value="hh:mm a" />
          <property name="maxTopic" value="10" />
          <property name="maxPost" value="10" />
          <property name="isShowForumJump" value="true" />
        </properties-param>
      </init-params>
    </component-plugin>
    <!--Forum group listener-->
    <component-plugin>
      <name>forum.group.event.listener </name>
      <set-method>addListenerPlugin </set-method>
      <type>org.exoplatform.forum.service.conf.ForumGroupListener</type>
      <description>Remove the forums in spaces and remove group storage in categories/forums/topics</description>
    </component-plugin>
  </external-component-plugins>
  
  <external-component-plugins>
    <target-component>org.exoplatform.services.jcr.RepositoryService</target-component>
    <component-plugin>
      <name>add.nodeType</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.services.jcr.impl.AddNodeTypePlugin</type>
      <init-params>
        <values-param>
          <name>autoCreatedInNewRepository</name>
          <description>Node types configuration file</description>
          <value>jar:/conf/portal/forum-nodetypes.xml</value>
          <value>jar:/conf/portal/faq-nodetypes.xml</value>
          <value>jar:/conf/portal/poll-nodetypes.xml</value>
          <value>jar:/conf/portal/bbcode-nodetypes.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
