<project>
	<parent>
		<groupId>org.exoplatform.ks</groupId>
		<artifactId>config</artifactId>
		<version>1.2.1</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>exo.ks.server.jboss.patch</artifactId>
	<version>${org.exoplatform.ks.version}</version>
	<packaging>jar</packaging>
	<name>eXo KS JBoss Server Patch</name>
	<url>http://www.exoplatform.org</url>
	<description>eXo KS JBoss Server Patch</description>
	
		
   <dependencies>
    <dependency>
      <groupId>org.exoplatform.portal</groupId>
      <artifactId>exo.portal.server.jboss.patch</artifactId>
      <version>${org.exoplatform.portal.version}</version>
      <type>jar</type>
    </dependency>
   </dependencies>
  <build>
	
	 <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              <excludes>**/conf/server.xml</excludes>
              <includes>**</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
		<resources>
			<resource>
				<directory>src/main/jboss</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>	
	</build>
</project>
